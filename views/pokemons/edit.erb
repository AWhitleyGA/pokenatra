<a href="/pokemon">Return to pokedex</a>

<h2>Edit Pokedex Info</h2>

<form action="/pokemon/<%= @pokemon.id %>" method="post">
  <input type="hidden" name="_method" value="put">

  <label>Pokemon Name</label>
  <input type="text" name="name" value="<%= @pokemon.name %>">

  <label>Pokemon Type</label>
  <input type="text" name="poke_type" value="<%= @pokemon.poke_type %>">

  <label>Combat Power</label>
  <input type="number" name="cp" value="<%= @pokemon.cp %>">

  <label>Image URL</label>
  <input type="text" name="img_url" value="<%= @pokemon.img_url %>">

  <button type="submit">Add</button>
</form>
